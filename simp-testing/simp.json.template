    {
## Just putting a wait in before the vagrant creation so it will reboot totaly
      "type": "shell",
      "remote_path": "/var/local/simp/inline-simp-reboot.sh",
      "execute_command": "chmod +x {{.Path}}; {{.Vars}} sh '{{.Path}}'",
      "pause_before": "140s",
      "expect_disconnect": true,
      "skip_clean": true,
      "inline" : [
         "echo 'done'"
