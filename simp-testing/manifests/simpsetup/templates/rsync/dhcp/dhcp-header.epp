allow booting;
allow bootp;
ddns-update-style interim;

class "pxeclients" {
  match if substring(option vendor-class-identifier, 0, 9) = "PXEClient";
  next-server         <%= $simpsetup::dhcp::ksserver %>;
  filename        "linux-install/pxelinux.0";
}

subnet <%= $simpsetup::dhcp::fwaddr %>.0 netmask 255.255.255.0 {

  option routers      <%= $simpsetup::dhcp::fwaddr %>.1;
  option subnet-mask      255.255.255.0;

  option domain-name      "<%= $simpsetup::dhcp::domain %>";
  option domain-name-servers    <%= $simpsetup::dhcp::dnsserver %>;

  option time-offset      -0;

  default-lease-time      21600;
  max-lease-time      43200;


